{
  "ecmaFeatures": {
    "modules": true,
    "blockBindings": true,
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": 2,
    "curly": 2,
    "strict": 0,
    "quotes": [2, "single", "avoid-escape"],
    "no-underscore-dangle": 0,
    "camelcase": 0,
    "no-unused-vars": [2, {"args": "none"}],
    "new-cap": 0,
    "radix": 2,
    "space-before-blocks": 2,
    "no-multiple-empty-lines": 2,
    "one-var": [2, { const: "never" }],
    "brace-style": [ 2, "1tbs", { "allowSingleLine": true }],
    "react/jsx-key": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-deprecated": 1
  },
  "globals": {
    "document": true,
    "React": true,
    "ReactDOM": true,

    //karma
    "expect": true,
    "describe": true,
    "xdescribe": true,
    "it": true,
    "xit": true,
    "setFixtures": true,
    "beforeEach": true,
    "afterEach": true
  }
}
